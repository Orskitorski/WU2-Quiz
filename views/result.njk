{% extends "layout.njk" %}
{% block content %}
<main class="container">
    <h1>{{message}}</h1>
    {% for result in results %}
        <h2>Fråga: {{result.question}}</h2>
        <ul>
            <li>Ditt svar: {{result.answer}}</li>
            {% if result.correct %}
                <li>Ditt svar var korrekt!</li>
            {% else %}
                <li>Ditt svar var felaktigt.</li>
            {% endif %}
        </ul>
    {% endfor %}
    <p><a href="/quiz/">Gör quizzet igen</a></p>
</main>
{% endblock %}