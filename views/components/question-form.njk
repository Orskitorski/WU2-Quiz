<form action="/quiz/end" method="post">
    {% for question in questions %}
        <h2>{{question.text}}</h2>
            {% for answer in question.answers %}
            <p>
                <input 
                    type="radio" 
                    id="{{question.id}}" 
                    name="{{question.id}}" 
                    value="{{answer}}">
                <label for="answers">{{answer}}</label>
            </p>
            {% endfor %}
    {% endfor %}
    <button type="submit">Skicka</button>
</form>